<Window x:Class="Lab5String.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Text Processor" Height="500" Width="498">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="68*"/>
            <ColumnDefinition Width="457*"/>
        </Grid.ColumnDefinitions>
        <TextBox Name="textBoxInput" IsReadOnly="True" Text="Исходный текст:" HorizontalAlignment="Left" Height="200" Margin="10,10,0,0" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" VerticalAlignment="Top" Width="480" AcceptsReturn="True" Grid.ColumnSpan="2" />
        <TextBox Name="textBoxOutput" IsReadOnly="True" Text="Преобразованный текст:" HorizontalAlignment="Left" Height="200" Margin="10,257,0,27" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"  Width="480" AcceptsReturn="True" Grid.ColumnSpan="2" />
        <Button Content="Выбор файла и изменение текста" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="125,222,0,0" Width="190" Click="ReadAndProcessText_Click" Grid.Column="1"/>
    </Grid>
</Window>
