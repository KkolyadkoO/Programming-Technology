<Window x:Class="Lab10.GraphSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Настройки графика" Height="324" Width="400">
    <Grid>
        <StackPanel Margin="20" VerticalAlignment="Center">
            <TextBlock Text="Текст графика:" FontSize="14" Margin="0,0,0,10"/>
            <TextBox x:Name="GraphTextBox"  FontSize="14" Padding="5"/>

            <TextBlock Text="Параметр a:" FontSize="14" Margin="0,10,0,10"/>
            <TextBox x:Name="ParameterATextBox"  FontSize="14" Padding="5"/>

            <TextBlock Text="Шрифт:" FontSize="14" Margin="0,10,0,10"/>
            <ComboBox x:Name="FontStyleComboBox" FontSize="14" Cursor="Hand" >
                <ComboBoxItem Content="Обычный"/>
                <ComboBoxItem Content="Жирный"/>
                <ComboBoxItem Content="Курсив"/>
            </ComboBox>

            <Button Content="Сохранить" Margin="0,20,0,0" Padding="10" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
